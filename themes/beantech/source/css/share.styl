color-grey = #aaa
color-default = #555
color-border = #ddd

// Fonts
font-size = 14px
font-size-article = 18px
line-height = 1.6em
line-height-title = 1.3em

// Miscellaneous
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

.post-share
    clearfix()
    font-size: font-size
    line-height: line-height
    border-top: 1px solid color-border
    padding-top: line-height
    a
        color: color-grey
        text-decoration: none
        &:hover
            color: color-default

.post-share-link
    i
        padding-right: 8px


.post-share-link
    cursor: pointer
    float: right
    margin-left: 20px

.post-share-box
    position: absolute
    display: none
    background: #fff
    box-shadow: 1px 2px 10px rgba(0, 0, 0, 0.2)
    border-radius: 3px
    margin-left: -145px
    overflow: hidden
    z-index: 1
    &.on
        display: block

.post-share-input
    width: 100%
    background: none
    box-sizing: border-box
    font: 14px font-sans
    padding: 0 15px
    color: color-default
    outline: none
    border: 1px solid color-border
    border-radius: 3px 3px 0 0
    height: 36px
    line-height: 36px

.post-share-links
    clearfix()
    background: color-background

$post-share-link
    width: 50px
    height: 36px
    display: block
    float: left
    position: relative
    color: #999
    text-align: center
    line-height: 36px
    text-decoration: none
    &:before
        font-size: 20px
        font-family: FontAwesome
        absolute-center(@font-size)
    &:hover
        color: #fff

.post-share-twitter
    @extend $post-share-link
    &:before
        content: "\f099"
    &:hover
        background: color-twitter
        text-shadow: 0 1px darken(color-twitter, 20%)

.post-share-facebook
    @extend $post-share-link
    &:before
        content: "\f09a"
    &:hover
        background: color-facebook
        text-shadow: 0 1px darken(color-facebook, 20%)

.post-share-pinterest
    @extend $post-share-link
    &:before
        content: "\f0d2"
    &:hover
        background: color-pinterest
        text-shadow: 0 1px darken(color-pinterest, 20%)

.post-share-google
    @extend $post-share-link
    &:before
        content: "\f0d5"
    &:hover
        background: color-google
        text-shadow: 0 1px darken(color-google, 20%)




